{
  "hosting": {
    "site": "karobhr-app",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "function": "ssrkarobhrapp" 
      }
    ]
  },
  "functions": [
    {
      "source": ".firebase/functions",
      "runtime": "nodejs20",
      "codebase": "firebase-frameworks-karobhr-app"
    }
  ],
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "storage": {
    "rules": "storage.rules"
  }
}
